@model Movie

@{
    ViewData["Title"] = "Add to Collection";
}

<div class="text-center">
    <h1 class="display-4">Add Your Favorites to the Collection!</h1><br>

    <!-- This fieldset will have a box around it for styling -->
    <fieldset>
        <!-- Attach a line underneat the legend -->
        <legend style="text-align:left; border-bottom:2px solid #333;">Fill out the Form</legend>

        <!-- Form and questions -->
        <form method="post">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" required/>
            <br>

            <label asp-for="Category">Category </label>
            <select asp-for="Category" required>
                <option value="" disabled selected>Select</option>
                <option value="Action/Adventure">Action/Adventure</option>
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Family">Family</option>
                <option value="Horror/Suspense">Horror/Suspense</option>
                <option value="Miscellaneous">Miscellaneous</option>
                <option value="Television">Television</option>
                <option value="VHS">VHS</option>
            </select>
            <br>

            <label asp-for="Year">Year</label>
            <input asp-for="Year" required/>
            <br>

            <label asp-for="Director">Director</label>
            <input asp-for="Director" required/>
            <br>

            <label asp-for="Rating">Rating</label>
            <select asp-for="Rating" required>
                <option value="" disabled selected>Select</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <br>

            <!-- This can be Yes/No and optional; optional will be null -->
            <label asp-for="Edited">Edited</label>
            <select asp-for="Edited">
                <option value="" disabled selected>Select</option>
                <option value=1>Yes</option>
                <option value=0>No</option>
            </select>
            <br>

            <label asp-for="LentTo">Lent To</label>
            <input asp-for="LentTo"/>
            <br>
            
            <label asp-for="Notes">Notes</label>
            <input asp-for="Notes" maxlength="25"/>
            <br>

            <button type="submit" value="Submit">Add!</button>
        </form>
    </fieldset>
</div>