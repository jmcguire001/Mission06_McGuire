<!-- IS 413 - Mission 6
    Jacob McGuire
    Section 002, Group 3

    This is a webapp to help Professor Hilton's brother Joel keep track of his favorite movies.
    It allows users to add movies to the collection, as well as introduce them to Joel.
 -->

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Dynamic C# to name the title of the tab -->
        <title>@ViewData["Title"] - The Joel Hilton Film Collection</title>

        <!-- Links to stylesheets-->
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Mission06_McGuire.styles.css" asp-append-version="true" />
    </head>

    <body>
        <header>
            <!-- Dynamic C# to highlight the current page in the navbar -->
            @{
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
            }

            <!-- Navbar -->
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" style="color:black; background-color:#fff; text-decoration:none; font-weight: none;"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/fav_big.png" alt="Company Logo" style="max-height: 30px; margin-right: 10px;">The Joe Hilton Film Collection
                    </a>

                    <!-- Menu for mobile -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Menu for desktop with live links -->
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark @(currentController == "Home" && currentAction == "Index" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark @(currentController == "Home" && currentAction == "Meetjoel" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Meetjoel">Get to Know Joel</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark @(currentController == "Home" && currentAction == "Form" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Form">Add to Collection</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Main content -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- Footer -->
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - The Joel Hilton Film Collection
            </div>
        </footer>

        <!-- Scripts -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>